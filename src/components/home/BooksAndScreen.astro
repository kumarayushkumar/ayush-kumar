---
import { books, screens } from '../../data/book-and-screen'

const formatNumber = (num: number): string => {
  return num < 10 ? `0${num}` : String(num)
}
---

<section id="reads-and-watches" class="wrapper flex-col mt-64 2xl:mt-80">
  <h2 class="text-xl md:text-3xl text-zinc-200">Books & Screens</h2>
  <div
    class="mt-8 text-sm font-mono flex flex-col md:flex-row gap-10 md:gap-20 lg:gap-32">
    <div class="flex flex-col">
      <p class="text-base md:text-xl text-zinc-400 font-medium">Books</p>
      <ol class="mt-2 text-xs md:text-base leading-[100%] pl-1">
        {
          books.map((book, index) => (
            <li class="mt-2 font-normal text-zinc-500">
              {formatNumber(index + 1)} {book}
            </li>
          ))
        }
      </ol>
    </div>
    <div class="flex flex-col">
      <p class="text-sm md:text-xl text-zinc-400 font-medium">Screens</p>
      <ol class="mt-2 text-xs md:text-base leading-[100%] pl-1">
        {
          screens.map((screen, index) => (
            <li class="mt-2 font-normal text-zinc-500">
              {formatNumber(index + 1)} {screen}
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
