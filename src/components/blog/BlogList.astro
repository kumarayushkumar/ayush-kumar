---
import { getCollection } from 'astro:content'
const blogs = await getCollection('blogs')

const sortedBlogs = blogs.sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
})
---

<section
  class="wrapper mt-6 sm:mt-10 md:mt-20 flex flex-col gap-8 md:gap-14 xl:gap-16">
  <h1 class="">Blogs</h1>
  <div class="flex flex-col gap-6 sm:gap-8 md:gap-10 lg:gap-14">
    {
      sortedBlogs.map(blog => (
        <a
          href={`/blogs/${blog.slug}`}
          class="custom-cursor flex flex-col md:flex-row gap-2 md:gap-8"
          rel="noopener">
          <div class="flex-1/4 font-mono text-sm">
            {blog.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric'
            })}
          </div>
          <div class="flex-3/4">
            <h2 class="text-lg md:text-xl lg:text-2xl font-medium text-zinc-400">
              {blog.data.title}
            </h2>
            <p class="text-sm md:text-base font-normal mt-1 md:mt-2">
              {blog.data.description}
            </p>
            <p class="text-[10px] md:text-xs font-mono text-zinc-500 font-normal mt-2 md:mt-3">
              {blog.data.readTime} min read
            </p>
          </div>
        </a>
      ))
    }
  </div>
</section>
