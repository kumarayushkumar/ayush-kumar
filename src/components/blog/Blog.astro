---
import type { CollectionEntry } from 'astro:content'

interface Props {
  blog: CollectionEntry<'blogs'>
}
const { blog }: Props = Astro.props
const { Content } = await blog.render()
---

<section
  class="max-w-[680px] mx-auto px-6 md:px-0 mt-6 sm:mt-10 md:mt-20 flex flex-col">
  <h1 class="text-zinc-300">{blog.data.title}</h1>
  <div class="flex gap-4 mt-3 items-center md:mt-4">
    <p class="font-mono text-xs md:text-sm">
      {
        blog.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })
      }
    </p>
    <span class="font-mono text-sm">â€¢</span>
    <p class="font-mono text-xs md:text-sm">
      {blog.data.readTime} min read
    </p>
  </div>
  <div class="mt-8 sm:mt-10 md:mt-14 markdown-content text-zinc-400">
    <Content />
  </div>
</section>
